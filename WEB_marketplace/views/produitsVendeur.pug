html 
    head 
        title= "Mes produits"
        meta(charset='utf-8')
        link(rel="stylesheet", href="../css/produitsVendeur.css")
        link(rel="stylesheet", href="../css/header_footer.css")

    body

        header 
            h1=" TP MarketPlace"
            p= "Bonjour "+client["prenom"]+" "+client["nom"]
            form(action="/deconnexion", method="get") 
                input(type="submit", value="Se déconnecter")  
            a(href="/accueil")= "Accueil" 
            a(href="/transactions")= "Voir mes transactions"
            a(href="/cartes")= "Modifier carte de paiement"
            if client['vendeur'] == true
                a(href="/modifProduits")= "Modifier vos produits"

        h1= "Vos Produits :"
        each p in produits
            div.prod
                h1="Nom : "+p["nom"]
                h1="Photo : "+p["photo"]
                h1="Poid : "+p["poid"]+" Kg"
                h1="Prix : "+p["prix"]+ " €"
                form(action="/supprimerProduit/"+p['id'], method="get")
                    input(type="submit", value="Supprimer") 

        h1= "Ajouter un nouveau produit :"
        div.ajouterProd
            form(action="/ajoutProduit", method="post")
                div
                    label(for="nom")= "Nom du produit"
                    input#nom(type="text", name="nom") 
                div
                    label(for="photo")= "Photo :"
                    input#photo(type="text", name="photo")
                div
                    label(for="poid")= "Poid : "
                    input#poid(type="text", name="poid")  
                div
                    label(for="prix")= "Prix : "
                    input#nom(type="text", name="prix") 
                            
                
                input(type="submit", value="Ajouter le produit")
        
        footer
            p= "Copyright © 2021 - Gallet Benjamin"